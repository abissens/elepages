<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
        PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>{{page.metadata.title}}</title>
</head>
<body>
<div class="page">
    <div class="header">
        <h2>{{page.metadata.title}}</h2>
        <div class="authors">
            {{#each page.metadata.authors}}
                <h3>{{this}}</h3>
            {{/each}}
        </div>
    </div>

    <div class="payload">
        <div class="content">
            {{page_content}}
        </div>
        <div class="sidebar">
            {{#each (bundle_query "" "{limit: 5}")}}
              <a href="{{this.page_uri}}">{{this.metadata.title}}</a>
            {{/each}}
        </div>
    </div>
</div>

</body>
</html>
